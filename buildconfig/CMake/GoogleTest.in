cmake_minimum_required(VERSION 3.5)

project(googletest-download NONE)

include(ExternalProject)
ExternalProject_Add(googlemock
  GIT_REPOSITORY    https://github.com/google/googlemock.git
  GIT_TAG           "release-${gtest_version}"
  SOURCE_DIR        "${CMAKE_BINARY_DIR}/googletest-src/gmock"
  BINARY_DIR        "${CMAKE_BINARY_DIR}/googletest-build"
  PATCH_COMMAND     git apply ${CMAKE_SOURCE_DIR}/buildconfig/CMake/gmock_static.patch
            COMMAND git apply ${CMAKE_SOURCE_DIR}/buildconfig/CMake/gmock_spec_builders.patch
            COMMAND git apply ${CMAKE_SOURCE_DIR}/buildconfig/CMake/gmock_override.patch
  CONFIGURE_COMMAND ""
  BUILD_COMMAND     ""
  INSTALL_COMMAND   ""
  TEST_COMMAND      ""
)
ExternalProject_Add(googletest
  GIT_REPOSITORY    https://github.com/google/googletest.git
  GIT_TAG           "release-${gtest_version}"
  SOURCE_DIR        "${CMAKE_BINARY_DIR}/googletest-src/gtest"
  BINARY_DIR        "${CMAKE_BINARY_DIR}/googletest-build"
  PATCH_COMMAND     git apply ${CMAKE_SOURCE_DIR}/buildconfig/CMake/gtest_override.patch
  CONFIGURE_COMMAND ""
  BUILD_COMMAND     ""
  INSTALL_COMMAND   ""
  TEST_COMMAND      ""
)
